<!DOCTYPE html>
<html lang="{{app.request.locale}}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width" , initial-scale="1">
		<meta name="view-transition" content="same-origin">
		<title>
			{% block title %}Notre Blog en Symfony 7
			{% endblock %}
		</title>

		{% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}

		<link rel="shortcut icon" type="image/svg+xml" herf="{{asset('favicon.svg')}}">

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.5.2/dist/cyborg/bootstrap.min.css">

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	</head>
	<body>

		{% block header %}
			{% set _route = app.request.get('_route') %}
			<header>
				<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
					<div class="container">
						<a class="navbar-brand" href="{{ path('index') }}">
							Notre Blog en Symfony 7
						</a>
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#appNavbar">
							<span class="navbar-toggler-icon"></span>
						</button>

						<div class="navbar-collapse collapse" id="appNavbar">
							<ul class="navbar-nav ml-auto">
								{% block header_navigation_links %}
									<li class="nav-item {{ _route == 'index' ? 'active' : " "}}">
										<a href="{{ path('index') }}" class="nav-link">
											<i class="fa fa-home" aria-hidden="true">Blog</i>
										</a>
									</li>
									<li class="nav-item">
										<a href="{{ path('admin_blog_index') }}" class="nav-link">
											<i class="fa fa-lock" aria-hidden="true">Admin</i>
										</a>
									</li>
								{% endblock %}
							</ul>
						</div>
					</div>
				</nav>
			</header>
		{% endblock %}

		<div class="container body-container">
			{% block body %}
			<div class="row">
				<div id="main" class="col-sm-9">
					{%block main%}
						{%endblock%}
					</div>
					<div id="sidebar" class="col-sm-3">
						{% block sidebar %}{% endblock %}
					</div>
				</div>
			{% endblock %}
		</div>

		{% block footer%}
		<footer>
			<div class="container">
				<div class="row">
					<div id="footer-copyright" class="col-md-6">
						<p>&copy;
							{{'now' | date ('Y')}}</p>
						<p>{{'mit_license'}}</p>
					</div>

					<div id="footer-ressource" class="col-md-6">
						<p>
							<a href="">
								<i class="fa-brands fa-x-twitter" aria-hidden="true"></i>
							</a>
						</p>
					</div>
				</div>
			</div>
		</footer>
        {% endblock %}

	</body>
</html>
