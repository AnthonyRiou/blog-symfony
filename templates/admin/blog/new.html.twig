{% extends 'admin/layout.html.twig' %}


{% block main %}
    
<h1>New Post</h1>

{{ form_start(form) }}

   {{ form_row(form.title) }}
   {# {{ form_row(form.slug) }} #}
   {{ form_row(form.summary) }}
   {{ form_row(form.content) }}

<button type="submit" class="btn btn-primary">
